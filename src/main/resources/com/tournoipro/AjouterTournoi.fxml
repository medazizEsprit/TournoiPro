<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.text.Font?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tournoipro.AjouterTournoiController">
    <top>
        <AnchorPane prefHeight="14.0" prefWidth="600.0" style="-fx-background-color: #2e4057;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="167.0" layoutY="37.0" text="Ajouter un Tournoi" textFill="#2e4057">
                    <font>
                        <Font name="Arial Bold" size="29.0" />
                    </font>
                </Label>
                <TextField fx:id="NomTournoi" layoutX="171.0" layoutY="127.0" prefHeight="26.0" prefWidth="258.0" promptText="Nom Tournoi" />
                <TextField fx:id="NbreEq" layoutX="171.0" layoutY="203.0" prefHeight="26.0" prefWidth="258.0" promptText="Nombre d'équipes" />
                <DatePicker fx:id="DateDeb" layoutX="171.0" layoutY="279.0" prefHeight="26.0" prefWidth="258.0" promptText="Date Début" />
                <DatePicker fx:id="DateFin" layoutX="171.0" layoutY="355.0" prefHeight="26.0" prefWidth="258.0" promptText="Date Fin" />
                <Label fx:id="NomTournoiError" layoutX="171.0" layoutY="165.0" textFill="RED" />
                <Label fx:id="NbreEqError" layoutX="171.0" layoutY="241.0" textFill="RED" />
                <Label fx:id="DateDebError" layoutX="171.0" layoutY="317.0" textFill="RED" />
                <Label fx:id="DateFinError" layoutX="171.0" layoutY="393.0" textFill="RED" />
                <Button layoutX="260.0" layoutY="429.0" mnemonicParsing="false" onAction="#AjoutTournoi" prefHeight="37.0" prefWidth="93.0" style="-fx-background-color: #2e4057;" text="Ajouter" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="Retour" layoutX="260.0" layoutY="429.0" mnemonicParsing="false" onAction="#Cancel" prefHeight="37.0" prefWidth="93.0" style="-fx-background-color: #2e4057;" text="Retour" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
